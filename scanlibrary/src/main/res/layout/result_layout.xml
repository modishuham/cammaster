<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBack"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/original"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_original"
            android:text="Original"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/magicColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_magic"
            android:singleLine="true"
            android:text="Magic color"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/grayMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_grey"
            android:singleLine="true"
            android:text="Gray Mode"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/BWMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_black_white"
            android:singleLine="true"
            android:text="B and W"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/topBar"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rotate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_rotate_left"
            android:text="Rotate"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/mirror"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_mirror"
            android:singleLine="true"
            android:text="Mirror"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/brightnessButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_brightness"
            android:singleLine="true"
            android:text="Brightness"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/contrastButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_contrast"
            android:singleLine="true"
            android:text="Contrast"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <Button
        android:id="@+id/doneButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_select"
        android:orientation="horizontal"
        android:padding="@dimen/bottom_bar_padding" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_back"
        android:orientation="horizontal"
        android:padding="@dimen/bottom_bar_padding" />

    <TextView
        android:id="@+id/tv_hint_edit"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/backButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/for_better_results_use_brightness_or_contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/topBar2"
        android:layout_below="@id/doneButton"
        android:layout_gravity="center"
        android:layout_margin="@dimen/scanPadding">

        <ImageView
            android:id="@+id/scannedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/scanPadding" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/brightnessPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/topBar2"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Brightness"
            android:textColor="@color/colorWhite" />

        <SeekBar
            android:id="@+id/seek_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/blue"
            android:progressTint="@color/colorWhite"
            android:thumbTint="@color/colorPurple" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contrastPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/topBar2"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Contrast"
            android:textColor="@color/colorWhite" />

        <SeekBar
            android:id="@+id/seek_sharpness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progressBackgroundTint="@color/blue"
            android:progressTint="@color/colorWhite"
            android:thumbTint="@color/colorPurple" />

    </LinearLayout>

</RelativeLayout>